<div class="container">
  <h1>Trip to <%= @trip.location %>  </h1>
  <p> <%= @trip.name %> </p>
  <%= @trip.start_date %> <%= @trip.end_date %>

  <%= link_to 'Edit', edit_trip_path(@trip) %>
  <%= link_to 'Back', trips_path %>

  <hr>

  <%= link_to "Re-generate invite link", regenerate_invite_link_path(@trip), method: :patch %>
  <p> Invite link: http://localhost:3000/trips/<%= @trip.id %>?token=<%= @trip.invite_token %> </p>

  <div data-controller="item-status" data-item-status-url="<%= trip_items_path(@trip) %>">
    <ul class="list-inline tabs-underlined">
      <li>
        <%= link_to "Flight", "#", class: "tab-underlined", "data-action": 'click->item-status#flight' %>
      </li>
      <li>
        <%= link_to "Accommodation", "#", class: "tab-underlined", "data-action": 'click->item-status#accommodation' %>
      </li>
      <li>
        <%= link_to "Activity", "#", class: "tab-underlined", "data-action": 'click->item-status#activity' %>
      </li>
    </ul>
    <hr>
    <%= link_to "Pending", "#", class: "btn btn-secondary", "data-action": 'click->item-status#pending' %>
    <%= link_to "Approved", "#", class: "btn btn-secondary", "data-action": 'click->item-status#approved' %>
    <%= link_to "Booked", "#", class: "btn btn-secondary", "data-action": 'click->item-status#booked' %>
    <hr>
    <div data-target='item-status.items'>
      <%= render 'items/items', { items: @trip.items } %>
    </div>
  </div>
</div>
