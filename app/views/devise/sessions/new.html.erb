<div class="container devise" style="padding: 60px;">

  <div class="d-flex justify-content-between">
    <div>
      <h2>Log in</h2>
    </div>
    <div>
     <h2 class= "other"><%= render "devise/shared/links" %></h2>
    </div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "devise forgot" %><br />
       <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "LOG IN", class: "btn-main-trips" %>
    </div>
  <% end %>

</div>


