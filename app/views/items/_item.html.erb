
<% if item.category == 'Activity' %>
  <div class="action-card">
    <div class="action-card-top d-flex">
      <div class="action-card-main-activity d-flex">
        <div class="action-card-main-activity-image">
          <%= image_tag "https://cdn.britannica.com/47/80547-050-8B316D38/Field-green-tea-Mount-Fuji-Shizuoka-prefecture.jpg" %>
        </div>
        <div class="action-card-main-activity-name">
          <p class="name"> <%= item.name %> </p>
          <p class="date"><%= item.start_date %></p>
        </div>
      </div>
      <div class="action-card-pricecard">
        <div class="price-ellipsis d-flex justify-content-end">
          <%= image_tag "ellipsis.png", class: "ellipsis"%>
        </div>
        <div class="pricecard-price">
          <p class="mt-3 mb-0 price"> $<%= item.price %></p>
          <p class="mt-0 "> per pax </p>
        </div>
      </div>
    </div>
    <div class="action-card-bstrip d-flex">
      <div class="d-flex align-items-center">
        <div class="tag">
          <p class="pending-tag"> <%= item.status.capitalize %> </p>
        </div>
        <div class="bstrip-like d-flex">
          <%= image_tag "heart.png", class: "heart mr-1"%>
          <%= link_to "vote", trip_item_votes_path(item.trip, item), method: :post %>
          <% if current_user.votes.count > 0 %>
            <%= link_to "unvote", vote_path(current_user.votes.first), method: :delete %>
          <% end %>
          <p class= "mb-0 font-smaller"> <%= item.votes.count %> </p>
        </div>
      </div>
      <div class="btn">
        <%= link_to "CONFIRM", "#", class: "btn btn-primary-tt btn-sm" %>
      </div>
    </div>
  </div>
  <hr>

<% elsif item.category == 'Flight' %>
  <div class="action-card">
    <div class="action-card-top d-flex">
      <div class="action-card-main-flight">
        <div class="action-card-main-flight-top d-flex">
          <div class="maincard-dep-flight">
            <p class="time"> 06:35 </p>
            <p class="date"> <%= item.start_date %>  </p>
            <p class="airport"><%= item.flight_details.first.departure_airport %></p>
          </div>
          <div class="maincard-flight-duration">
           <div>
            <p class="duration-time">10h00</p>
          </div>
          <div class="line">
          </div>
        </div>
        <div class="maincard-arr-flight">
          <p class="time"> 14:35 </p>
          <p class="date"> <%= item.end_date %> </p>
          <p class="airport"><%= item.flight_details.first.arrival_airport%></p>
        </div>
      </div>
      <div class="action-card-main-flight-bottom">
        <p class="airline"><%= item.flight_details.first.airline %></p>
        <p class="flight-number"><%= item.flight_details.first.flight_number %></p>
      </div>
    </div>
    <div class="action-card-pricecard">
      <div class="price-ellipsis d-flex justify-content-end">
        <%= image_tag "ellipsis.png", class: "ellipsis"%>
      </div>
      <div class="pricecard-price">
        <p class="mt-3 mb-0 price"> $<%= item.price %> </p>
        <p class="mt-0 "> per pax </p>
      </div>
    </div>
  </div>
  <div class="action-card-bstrip d-flex">
    <div class="d-flex align-items-center">
      <div class="tag">
    <p class="approved-tag"> APPROVED </p>
      </div>
      <div class="bstrip-like d-flex">
        <%= image_tag "heart.png", class: "heart mr-1"%>
        <p class= "mb-0 font-smaller"> <%= item.votes.count %> </p>
      </div>
    </div>
    <div class="btn">
      <%= link_to "CONFIRM", "#", class: "btn btn-primary-tt btn-sm" %>
    </div>
  </div>
  <hr>

<% elsif item.category == 'Accommodation' %>
  <div class="action-card">
    <div class="action-card-top d-flex">
      <div class="action-card-main-accomodation d-flex">
        <div class="action-card-main-accomodation-image">
          <%= image_tag "https://www.gannett-cdn.com/-mm-/05b227ad5b8ad4e9dcb53af4f31d7fbdb7fa901b/c=0-64-2119-1259/local/-/media/USATODAY/USATODAY/2014/08/13/1407953244000-177513283.jpg?width=660&height=373&fit=crop&format=pjpg&auto=webp" %>
        </div>
        <div class="action-card-main-accomodation-name">
          <p class="name"><%= item.name %></p>
          <p class="address"><%= item.address %></p>
          <div class="action-card-main-accomodation-date d-flex">
            <div class="check-in">
              <p>IN</p>
              <p>OUT</p>
            </div>
              <p style="font-size:12px" class="check-in"><%= item.start_date %></p>
              <p style="font-size:12px" class="check-out"><%= item.end_date %></p>
          </div>
        </div>
      </div>
      <div class="action-card-pricecard">
        <div class="price-ellipsis d-flex justify-content-end">
          <%= image_tag "ellipsis.png", class: "ellipsis"%>
        </div>
        <div class="pricecard-price">
          <p class="mt-3 mb-0 price"> $<%= item.price %> </p>
          <p class="mt-0 "> per pax </p>
        </div>
      </div>
    </div>
  </div>
  <div class="action-card-bstrip d-flex">
    <div class="d-flex align-items-center">
      <div class="tag">
        <p class="booked-tag">BOOKED</p>
      </div>
      <div class="bstrip-like d-flex">
        <%= image_tag "heart.png", class: "heart mr-1"%>
        <p class= "mb-0 font-smaller"> <%= item.votes.count %> </p>
      </div>
    </div>
    <div class="btn">
      <%= link_to "CONFIRM", "#", class: "btn btn-primary-tt btn-sm" %>
    </div>
  </div>
  <hr>

<% else %>
  <p>category not recognize</p>
  <hr>
<% end %>



