<h1>Test UIKIT</h1>

<div class = "container-tt">

  <p> primary button </p>
  <%= link_to "CONFIRM", "#", class: "btn btn-primary-tt btn-sm" %>
  <hr>

  <p> status tags </p>
  <p class = "pending-tag"> PENDING </p>
  <p class = "approved-tag"> APPROVED </p>
  <p class = "booked-tag"> BOOKED </p>
  <hr>

  <p>bottom strip</p>
  <div class = "bottom-strip">
    <div class="group right-16">
      <p class = "pending-tag"> PENDING </p>
      <div class="d-flex justify-content-between align-items-center">
        <%= image_tag "heart.png", class: "heart mr-1"%>
        <p class= "mb-0"> 4 </p>
      </div>
    </div>
    <div class = "left-16">
      <%= link_to "CONFIRM", "#", class: "btn btn-primary-tt btn-sm" %>
    </div>
  </div>

  <hr>

  <p>side card</p>
  <div class= "side-card">
    <%= image_tag "ellipsis.png", class: "ellipsis"%>
    <div>
      <h4 class="mt-3 mb-0"> $450 </h4>
      <p class="mt-0"> per pax </p>
    </div>
  </div>

  <hr>

  <p>flight details</p>

  <hr>

  <p>flight card</p>

  <div class= "action-card">

    <div class="d-flex">

      <div class= "flight-detail-card">
        <div class= "flight-top-grp justify-content-between">
          <div class="time-date-loc-grp">
            <p class="center font-big">06:35</p>
            <p class="center font-smallnt-small">20/11/2020</p>
            <p class="center font-small">SIN</p>
          </div>
          <div class="down">
            <p class="center font-small">10h00</p>
            <div class="line"></div>
          </div>
          <div class="time-date-loc-grp">
            <p class="center font-big">16:35</p>
            <p class="center font-small">20/11/2020</p>
            <p class="center font-small">GER</p>
          </div>
        </div>
        <div>
            <p class="m-0 ml-2 mt-2 font-small-bold">Singapore Airlines</p>
            <p class="m-0 ml-2 font-smaller">SIA8888</p>
        </div>
      </div>

      <div class= "side-card">
        <%= image_tag "ellipsis.png", class: "ellipsis"%>
        <div>
          <p class="mt-3 mb-0 font-price center"> $450 </p>
          <p class="mt-0 font-smaller center"> per pax </p>
        </div>
      </div>

    </div>

    <div class = "bottom-strip">
      <div class="status-vote-grp right-16">
        <p class = "pending-tag"> PENDING </p>
        <div class="d-flex justify-content-between align-items-center">
          <%= image_tag "heart.png", class: "heart mr-1"%>
          <p class= "mb-0 font-smaller"> 4 </p>
        </div>
      </div>
      <div class = "left-16">
        <%= link_to "CONFIRM", "#", class: "btn btn-primary-tt btn-sm" %>
      </div>
    </div>

  </div>



</div>

