<div class="container" data-controller="future-controller" style="padding: 60px;">
  <% if Item.exists?(@item.id) %>
    <span>
     <h3>EDIT LODGING</h3>
     <%= simple_form_for [@trip, @item] do |f| %>
          <%= f.hidden_field :category %>
          <%= f.input :name %>
          <%= f.input :start_date, as: :string, input_html: {class: "datepicker"}  %>
          <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
          <%= f.input :address %>
          <%= f.input :url %>
          <%= f.input :price %>
          <%= f.submit "Edit", class: "btn-main-trips"%>
      <% end %>
    </span>
  <% else %>
    <span>
      <h3>ADD LODGING</h3>
      <%= simple_form_for [@trip, @item] do |f| %>
        <%= f.hidden_field :category %>
        <%= f.input :name %>
        <%= f.input :start_date, as: :string, input_html: {class: "datepicker"}  %>
        <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
        <%= f.input :address %>
        <%= f.input :url %>
        <%= f.input :price %>
        <%= f.submit "Create", class: "btn-main-trips"%>
      <% end %>
    </span>
  <% end %>
</div>

